<div class="section no-pad-bot">
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card-panel grey darken-4 clearfix">
          <div class="crop left">
            <%= image_tag(@beer.labels["medium"], class: "portrait") %>
          </div>
          <div class="white-text left beer-title">
            <div class="row">
              <div class="col s12">
                <h4><%= @beer.name %></h4>
              </div>
              <div class="col s12">
                <div class="chip amber darken-2 gray-text"><%= @beer.style_summary["name"] %></div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="col m4 s12">
        <div class="card grey darken-4">
          <div class="card-content">
            <span class="card-title grey-text text-darken-1">
              <%= t(".abv") %>
            </span>
            <span class="clearfix">
              <span class="left red-text"><%= fa_icon("beer", class: "fa-2x fa-fw") %></span>
              <span class="left beer-number white-text"><%= number_to_percentage(@beer.abv, precision: 1) %></span>
            </span>
          </div>
        </div>
      </div>
      <div class="col m4 s12">
        <div class="card grey darken-4">
          <div class="card-content">
            <span class="card-title grey-text text-darken-1">
              <%= t(".ibu") %>
            </span>
            <span class="clearfix">
              <span class="left light-green-text"><%= fa_icon("adjust", class: "fa-2x fa-fw") %></span>
              <span class="left beer-number white-text"><%= display_info(@beer.ibu) %></span>
            </span>
          </div>
        </div>
      </div>
      <div class="col m4 s12">
        <div class="card grey darken-4">
          <div class="card-content">
            <span class="card-title grey-text text-darken-1">
              <%= t(".serving_temperature") %>
            </span>
            <span class="clearfix">
              <span class="left cyan-text"><%= fa_icon("thermometer-quarter", class: "fa-2x fa-fw") %></span>
              <span class="left beer-number white-text"><%= display_info(@beer.serving_temperature) %></span>
            </span>
          </div>
        </div>
      </div>

      <div class="col s12">
        <div class="card grey darken-4">
          <div class="card-content">
            <span class="card-title grey-text text-darken-1">
              <%= t(".description") %>
            </span>
            <span class="beer-description white-text">
              <%= @beer.description %>        
            </span>
          </div>
        </div>
      </div>

      <div class="col s12">
        <div class="card horizontal grey darken-4">
          <div class="card-image">
            <%= glass_image(@beer.glass["name"]) %>
          </div>
          <div class="card-stacked">
            <div class="card-content">
              <span class="card-title grey-text text-darken-1">
                <%= t(".suggested_glass") %>
              </span>
              <div class="flow-text">
                <%= t(".suggested_glass_text_html", glass: @beer.glass["name"], beer: @beer.name) %>
              </div>
            </div>
            <div class="card-action">
              <%= link_to "http://www.google.com?q=#{@beer.glass["name"]}" do %>
                <%= material_icon.search.css_class("left") %>
                <%= t(".search_glass") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <%= display_food_pairings(@beer) %>
    </div>
  </div>
</div>