<div class="section no-pad-bot">
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card-panel grey darken-4 clearfix">
          <div class="crop left">
            <%= image_tag(@beer.labels["medium"], class: "portrait") %>
          </div>
          <div class="white-text left beer-title">
            <h4><%= @beer.name %></h4>
            <span class="chip style-link amber darken-2 gray-text text-darken-4">
              <%= link_to @beer.style_summary["short_name"],
                          beers_path(q: { style_original_id_eq: @beer.style_original_id }) %>
            </span>
            <%= display_brewery_chips(@beer) %>
          </div>
        </div>
      </div>

      <div class="col m4 s12">
        <div class="card grey darken-4">
          <div class="card-content">
            <span class="card-title grey-text text-darken-1">
              <%= t(".abv") %>
            </span>
            <span class="clearfix">
              <span class="left red-text"><%= fa_icon("beer", class: "fa-2x fa-fw") %></span>
              <span class="left beer-number white-text"><%= number_to_percentage(@beer.abv, precision: 1) %></span>
            </span>
          </div>
        </div>
      </div>
      <div class="col m4 s12">
        <div class="card grey darken-4">
          <div class="card-content">
            <span class="card-title grey-text text-darken-1">
              <%= t(".ibu") %>
            </span>
            <span class="clearfix">
              <span class="left light-green-text"><%= fa_icon("adjust", class: "fa-2x fa-fw") %></span>
              <span class="left beer-number white-text"><%= display_info(@beer.ibu) %></span>
            </span>
          </div>
        </div>
      </div>
      <div class="col m4 s12">
        <div class="card grey darken-4">
          <div class="card-content">
            <span class="card-title grey-text text-darken-1">
              <%= t(".serving_temperature") %>
            </span>
            <span class="clearfix">
              <span class="left cyan-text"><%= fa_icon("thermometer-quarter", class: "fa-2x fa-fw") %></span>
              <span class="left beer-number white-text"><%= display_info(@beer.serving_temperature) %></span>
            </span>
          </div>
        </div>
      </div>

      <%= display_description(@beer) %>
      <%= display_glass(@beer) %>
      <%= display_food_pairings(@beer) %>
    </div>
  </div>
</div>